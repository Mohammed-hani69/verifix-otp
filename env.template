# =============================================================================
# Email Sender Pro - Environment Configuration Template
# نموذج إعدادات البيئة - انسخ هذا الملف إلى .env وقم بتعديل القيم
# =============================================================================

# إعدادات البيئة الأساسية
SECRET_KEY=your-very-secret-key-here-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# قاعدة البيانات
DATABASE_URL=sqlite:///app.db
# للإنتاج مع PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/database_name
# للإنتاج مع MySQL:
# DATABASE_URL=mysql://username:password@localhost/database_name

# معلومات الشركة
COMPANY_NAME=Verifix-OTP
ADMIN_EMAIL=admin@verifix-otp.com
ADMIN_PASSWORD=change_this_password_immediately

# إعدادات التسعير
MESSAGE_PRICE=0.25
FREE_MESSAGES_LIMIT=1000

# إعدادات البريد الإلكتروني الافتراضية
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# إعدادات الأمان
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# إعدادات الجلسة
PERMANENT_SESSION_LIFETIME=86400
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# إعدادات الإنتاج (قم بإلغاء التعليق عند النشر)
# FLASK_ENV=production
# FLASK_DEBUG=False
# SESSION_COOKIE_SECURE=True
# SSL_DISABLE=False
# SERVER_NAME=your-domain.com
# PREFERRED_URL_SCHEME=https
