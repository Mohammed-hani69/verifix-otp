# إعدادات البيئة الأساسية
SECRET_KEY=your-very-secret-key-here-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# قاعدة البيانات
DATABASE_URL=sqlite:///app.db
# للإنتاج مع PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/database_name
# للإنتاج مع MySQL:
# DATABASE_URL=mysql://username:password@localhost/database_name

# معلومات الشركة
COMPANY_NAME=شركة الرسائل الذكية
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=admin123456

# إعدادات التسعير
MESSAGE_PRICE=0.25
FREE_MESSAGES_LIMIT=1000

# إعدادات البريد الإلكتروني الافتراضية (للإدارة)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# إعدادات الأمان
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# إعدادات الجلسة
PERMANENT_SESSION_LIFETIME=86400
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# إعدادات الإنتاج (للخادم)
# FLASK_ENV=production
# FLASK_DEBUG=False
# SESSION_COOKIE_SECURE=True
# SSL_DISABLE=False
